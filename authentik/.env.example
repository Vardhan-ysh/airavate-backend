# Authentik Environment Configuration
# Copy this to .env and update with your values

# PostgreSQL Database
PG_PASS=authentik_password_change_me
PG_USER=authentik
PG_DB=authentik

# Authentik Configuration
AUTHENTIK_SECRET_KEY=generate_a_secret_key_here_use_openssl_rand_base64_50
AUTHENTIK_ERROR_REPORTING=false
AUTHENTIK_INSECURE=false
AUTHENTIK_TAG=2024.8.3

# SMTP Configuration (Optional - for email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false
# SMTP_FROM=authentik@airavate.com

# Port Configuration
COMPOSE_PORT_HTTP=9000
COMPOSE_PORT_HTTPS=9443

# Airavate Backend Integration
AIRAVATE_BACKEND_URL=http://localhost:3000
AIRAVATE_FRONTEND_URL=http://localhost:3001
