{
  "name": "airavate-backend",
  "version": "1.0.0",
  "description": "Scalable production-grade backend for Airavate project using PostgreSQL, Prisma, Express, and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "powershell -ExecutionPolicy Bypass -File .\\start-dev.ps1 && npm run dev:backend-only",
    "dev:backend-only": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "authentik:start": "docker-compose -f authentik/docker-compose.yml up -d",
    "authentik:stop": "docker-compose -f authentik/docker-compose.yml down",
    "authentik:logs": "docker-compose -f authentik/docker-compose.yml logs -f",
    "monitoring:start": "docker-compose -f monitoring/docker-compose.yml up -d",
    "monitoring:stop": "docker-compose -f monitoring/docker-compose.yml down",
    "monitoring:logs": "docker-compose -f monitoring/docker-compose.yml logs -f",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "metrics": "curl -f http://localhost:3000/metrics || exit 1"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express-validator": "^2.20.33",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "openid-client": "^6.7.1",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "prom-client": "^13.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.5.2",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "backend",
    "express",
    "postgresql",
    "prisma",
    "typescript",
    "rest-api",
    "scalable",
    "production"
  ],
  "author": "Airavate Team",
  "license": "MIT"
}
